#!/usr/bin/env bash

EMAIL="$1"
BINARY=/usr/bin/gmailcount
CACHE_DIR=${XDG_CACHE_HOME:-/home/julian/.cache}

mkdir -p "$CACHE_DIR/gmailcount"
output="$("$BINARY" "$EMAIL")"
if [ ! $? -eq 0 ]; then
  echo -n "" > "$CACHE_DIR/gmailcount/$EMAIL"
  echo "gmailcount failed"
  exit 1
fi

echo -n "$output" > "$CACHE_DIR/gmailcount/$EMAIL"
