#!/usr/bin/env sh

# Usage:
#   $ ptouch file/a.txt otherfile/b.txt
#   $ tree
#      .
#      |-- file
#      |   `-- a.txt
#      `-- otherfile
#          `-- b.txt
#   $ ptouch {directory,otherdirectory}/{sub,other}/{a,b,c}.ext
#   $ tree
#      .
#      |-- directory
#      |   |-- other
#      |   |   |-- a.ext
#      |   |   |-- b.ext
#      |   |   `-- c.ext
#      |   `-- sub
#      |       |-- a.ext
#      |       |-- b.ext
#      |       `-- c.ext
#      `-- otherdirectory
#          |-- other
#          |   |-- a.ext
#          |   |-- b.ext
#          |   `-- c.ext
#          `-- sub
#              |-- a.ext
#              |-- b.ext
#              `-- c.ext

while [ -n "$1" ]
do
  install -D /dev/null "$1"
  chmod 644 "$1"
  shift
done
