setup_monitors () {
  hostname=$(hostname)
  if [ "$hostname" = 'orpheus' ]
  then
    xrandr --output eDP1 --preferred --primary --output HDMI1 --preferred --left-of eDP1 &
  fi
}

# Configure touchpad
xinput set-prop 'SynPS/2 Synaptics TouchPad' 'Synaptics Tap Time' 0
xinput --set-prop --type=int --format=8  'SynPS/2 Synaptics TouchPad' 'Synaptics Edge Scrolling' 1 0 0

# map capslock to escape
setxkbmap -option caps:escape

# Startup kupfer
kupfer --no-splash &

# Setup monitors and load wallpaper.
setup_monitors && ~/.fehbg &

xautolock -time 5 -locker ~/.local/bin/screen-lock.sh &
