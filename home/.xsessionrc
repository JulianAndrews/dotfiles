# Configure touchpad
xinput set-prop 'SynPS/2 Synaptics TouchPad' 'Synaptics Tap Time' 0
xinput --set-prop --type=int --format=8 'SynPS/2 Synaptics TouchPad' 'Synaptics Edge Scrolling' 1 0 0

# map capslock to escape
setxkbmap -option caps:escape

# disable bell
xset b off

# Setup monitors and load wallpaper.
~/.local/bin/set-monitors && ~/.fehbg &

# Setup autolock
xautolock -time 5 -locker ~/.local/bin/screen-lock &

# Setup volume fifo
[ -p /tmp/.volume-pipe ] || mkfifo /tmp/.volume-pipe ]
~/.config/xmobar/volume.sh &

# Setup usb automount
devmon --exec-on-drive "notify-send --urgency=normal \"%f mounted to %d.\"" &

# Startup kupfer
kupfer --no-splash &
