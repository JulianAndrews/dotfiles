set expandtab
set shiftwidth=4 tabstop=4 softtabstop=4
set number
set clipboard=unnamed
set backspace=2
set lazyredraw
set wildignore+=*.pyc
set mouse=a
set hlsearch
set cursorline
set wildmenu
set tags=tags
set completeopt=menu

set undofile
